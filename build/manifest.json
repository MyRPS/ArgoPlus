{
  "name": "Argonet+",
  "version": "1.0.0",
  "description": "Better Argonet.",
  "manifest_version": 3,
  "author": "Mootbing",

  "action":{
    "default_popup": "index.html",
    "default_title": "Argonet+",
    "default_icon": {
      "16": "images/16.png",
      "24": "images/24.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "64": "images/64.png",
      "128": "images/128.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "scripts/content/mail.js",
        "scripts/content/assignDetails.js",
        "scripts/content/backgroundCalendar.js",
        "scripts/content/login.js",
        "scripts/content/router.js"
      ]
    }
  ],

  "background": {
    "service_worker": "scripts/background/tabCheck.js"
  },

  "icons": {
    "16": "images/16.png",
    "24": "images/24.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "64": "images/64.png",
    "128": "images/128.png"
  },

  "host_permissions": [
    "*://*/*"
  ],

  "permissions": [
    "tabs",
    "storage"
  ]
}